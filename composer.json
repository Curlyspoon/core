{
    "name": "curlyspoon/core",
    "description": "",
    "keywords": ["curlyspoon"],
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Witkowski",
            "email": "dev.gummibeer@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "symfony/options-resolver": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.0.0",
        "pug-php/pug": "^3.1",
        "twig/twig": "^2.4"
    },
    "suggest": {
        "pug-php/pug": "Allows to use the pug template engine.",
        "twig/twig": "Allows to use the twig template engine."
    },
    "autoload": {
        "psr-4": {
            "Curlyspoon\\Core\\": "src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/integration/TestCase.php"
        ],
        "psr-4": {
            "Curlyspoon\\Core\\Tests\\Elements\\": "tests/Elements"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
